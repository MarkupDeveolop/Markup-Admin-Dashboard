model Banner {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  nameEn String
  nameAr String

  titleEn      String
  titleAr      String
  subtitleEn   String
  subtitleAr   String
  link         String
  bannerImages BannerImages[]
  isFeatured   Boolean        @default(false)
  isArchived   Boolean        @default(false)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
