}

model Product {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  slug String @unique

  
  categoryId String   @db.ObjectId
  category   Category @relation("CategoryToProduct", fields: [categoryId], references: [id])

  
  imageUrl String   @default("")
  images   Images[]

  titleEn    String @default("")
  titleAr    String @default("")
  subtitleEn String @default("")
  subtitleAr String @default("")

  structureEn String @default("")
  structureAr String @default("")

  shelfLifeEn String @default("")
  shelfLifeAr String @default("")

  fillingEn String @default("")
  fillingAr String @default("")

  storageEn String @default("")
  storageAr String @default("")

  price    Int
  quantity Int
  orderItems OrderItem[]



  isBestSeller Boolean @default(false)
  isFeatured   Boolean @default(false)
  isArchived   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
}

model Images {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
}

